<Module>
 <ModulePrefs title="Want to work with me?" title_ur="http://www.talentnow.com" description="Want to work at my company? Check out some cool job openings at my company!" author="Jigar BJ Patel" author_email="jigarbjpatel@gmail.com" thumbnail="http://talentnow.com/images/logo.gif">
	<Require feature="opensocial-0.7"/>
	<Require feature="minimessage"/>
	<Require feature="tabs" /> 
	<Locale lang="en" country="us" />
	<!--<Require feature="settitle"/>-->
 </ModulePrefs>
 <Content type="html">

 <![CDATA[
   <style type="text/css">
   .fieldLabel{
		clear: left;
		text-align: left;
		padding-bottom: 5px;
		color: black;
		vertical-align: top;
		font-size: 12px;
